<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gameofthones"
    tools:context="enigma.mytetris.Main2Activity">

    <GridLayout
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:clickable="true"
            android:onClick="stark"
            app:srcCompat="@drawable/starkshield"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="124dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:clickable="true"
            android:onClick="lannister"
            app:srcCompat="@drawable/lannistershield" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:onClick="baratheon"
            app:srcCompat="@drawable/baratheonshield" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:onClick="targaryen"
            app:srcCompat="@drawable/targaryenshield" />
    </GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="263dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="Seleccione su casa"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="59dp"
        android:layout_height="60dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="16dp"
        android:alpha="0.5"
        android:clickable="true"
        android:onClick="info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_help" />

</android.support.constraint.ConstraintLayout>
